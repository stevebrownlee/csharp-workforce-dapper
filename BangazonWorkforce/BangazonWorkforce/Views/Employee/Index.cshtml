@model IEnumerable<BangazonWorkforce.Models.Employee>

@{
    ViewData["Title"] = "Bangazon Employees";
}

<h2>
    @ViewData["Title"]
    <a asp-action="Create"><img style="height:38px;" src="/images/create.png" /></a>
</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@employee.Id">
                    @Html.DisplayFor(modelemployee => employee.FullName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.Computer.Designation)
            </td>
        </tr>
    }
    </tbody>
</table>
